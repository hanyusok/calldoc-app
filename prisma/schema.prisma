generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  ADMIN
  STAFF
  PHARMACIST
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  password      String?
  role          Role            @default(PATIENT)
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  appointments  Appointment[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  age           Int?
  gender        String?
  phoneNumber   String?
  residentNumber String?
  insurance     Insurance?
  familyMembers FamilyMember[]
  pharmacyId    String?
  pharmacy      Pharmacy?       @relation(fields: [pharmacyId], references: [id])
  vaccinationReservations VaccinationReservation[]
  notifications Notification[]
}

model Insurance {
  id           String   @id @default(cuid())
  provider     String
  policyNumber String
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FamilyMember {
  id       String  @id @default(cuid())
  name     String
  relation String
  age      Int
  gender   String
  residentNumber String?
  phoneNumber    String?
  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}


model Doctor {
  id          String   @id @default(cuid())
  name        String
  specialty   String
  clinicId    String?
  clinic      Clinic?  @relation(fields: [clinicId], references: [id])
  rating      Float    @default(5.0)
  patients    Int      @default(0)
  imageUrl    String?
  bio         String?
  gender      String?  // 'male' | 'female'
  address     String?
  consultationFee Int   @default(5000)
  isAvailable Boolean  @default(true)
  appointments Appointment[]
  schedules   DoctorSchedule[]
  exceptions  DoctorException[]
}

model Clinic {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String
  city        String?
  latitude    Float?
  longitude   Float?
  phoneNumber String?
  website     String?
  rating      Float    @default(0.0)
  images      String[]
  isVisible   Boolean  @default(true)
  
  doctors     Doctor[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DoctorSchedule {
  id          String   @id @default(cuid())
  doctorId    String
  doctor      Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  
  // Recurring schedule
  dayOfWeek   Int      // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  startTime   String   // "09:00"
  endTime     String   // "17:00"
  slotDuration Int     @default(30) // minutes
  
  // Break time (e.g., lunch break)
  breakStartTime String?  // "12:00"
  breakEndTime   String?  // "13:00"
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([doctorId, dayOfWeek])
}

model DoctorException {
  id          String   @id @default(cuid())
  doctorId    String
  doctor      Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  
  date        DateTime @db.Date
  isAvailable Boolean  @default(false) // false = day off, true = special hours
  startTime   String?  // if isAvailable = true
  endTime     String?  // if isAvailable = true
  reason      String?  // "Holiday", "Conference", etc.
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([doctorId, date])
}

model Appointment {
  id            String   @id @default(cuid())
  userId        String
  doctorId      String
  familyMemberId String?
  date          DateTime
  status        String   @default("PENDING") // PENDING, AWAITING_PAYMENT, CONFIRMED, COMPLETED, CANCELLED
  price         Float?
  meetingLink   String?
  symptoms      String?
  user          User     @relation(fields: [userId], references: [id])
  doctor        Doctor   @relation(fields: [doctorId], references: [id])
  familyMember  FamilyMember? @relation(fields: [familyMemberId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  payment       Payment?
  prescription  Prescription?
}

model Payment {
  id            String      @id @default(cuid())
  paymentKey    String?     @unique // DAOUTRX or AUTHNO
  amount        Int
  method        String?     // CARD, etc.
  status        String      @default("PENDING") // PENDING, COMPLETED, CANCELLED, FAILED
  requestedAt   DateTime    @default(now())
  approvedAt    DateTime?
  receiptUrl    String?
  refundedAmount Int         @default(0)
  appointmentId String      @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

model Pharmacy {
  id        String   @id @default(cuid())
  name      String
  fax       String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDefault Boolean  @default(false)
  users     User[]
}

enum PrescriptionStatus {
  PENDING
  REQUESTED
  ISSUED
  REJECTED
}

model Prescription {
  id              String             @id @default(cuid())
  appointmentId   String             @unique
  appointment     Appointment        @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  pharmacyName    String
  pharmacyFax     String?
  pharmacyPhone   String?
  pharmacyAddress String?

  status          PrescriptionStatus @default(PENDING)
  fileUrl         String?            // URL to the uploaded prescription file

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
}

model AppSettings {
  id              Int     @id @default(1)
  siteName        String  @default("CallDoc")
  maintenanceMode Boolean @default(false)
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  author    String?
  category  String?  @default("Health")
  published Boolean  @default(true)
  locale    String   @default("ko") // 'ko' or 'en'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vaccination {
  id            String   @id @default(cuid())
  name          String
  nameEn        String?  // English content
  price         Float
  description   String?
  descriptionEn String?  // English content
  visitTime     String? // e.g. "30 min", "Mon-Fri 9-6"
  visitTimeEn   String?  // English content
  location      String? // e.g. "Seoul National Hospital"
  locationEn    String?  // English content
  category      String? // e.g. "Flu", "COVID-19"
  categoryEn    String?  // English content
  manufacturer  String?
  manufacturerEn String? // English content
  targetDisease String?
  targetDiseaseEn String? // English content
  minAge        Int? // Minimum age in years
  maxAge        Int? // Maximum age in years
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reservations VaccinationReservation[]
}

model VaccinationReservation {
  id            String      @id @default(cuid())
  userId        String
  vaccinationId String
  date          DateTime?
  status        String      @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  user          User        @relation(fields: [userId], references: [id])
  vaccination   Vaccination @relation(fields: [vaccinationId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model MeetPreset {
  id          String   @id @default(cuid())
  name        String
  link        String
  description String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // 'APPOINTMENT_REQUEST', 'SYSTEM', etc.
  message   String
  key       String?
  params    String?  // JSON stringified parameters
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
}
